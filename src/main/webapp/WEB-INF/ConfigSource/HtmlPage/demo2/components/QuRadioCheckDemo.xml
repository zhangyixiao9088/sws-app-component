			    	type="Quselect"
			    <b>Label属性：</b>
			    	""label":"下拉多选"
			    <b>View属性：</b>
			    	data:"wmgc"
			    	multiple:"true"
			    ]]></param-value>
			</param>
			<param>
				<param-name>components</param-name>
				<param-value><![CDATA[
			    ["SINGLERADIO","MULTIPRADIO","HTSGTS","MULTIPSEL"]
			    ]]></param-value>
			</param>
		</Component>
		<Component name="SINGLERADIO" type="QuRadioCheck">
			<param>
				<param-name>Label</param-name>
				<param-value>{"label":"单选"}</param-value>
			</param>
			<param>   
			    <param-name>View</param-name>   
			    <param-value><![CDATA[
			    {
			    	data:"wmgc",
			    	type:"radio",
			    }
			    ]]></param-value>   
			</param>
		</Component>
		<Component name="MULTIPRADIO" type="QuRadioCheck">
			<param>
				<param-name>Label</param-name>
				<param-value>{"label":"多选"}</param-value>
			</param>
			<param>   
			    <param-name>View</param-name>   
			    <param-value><![CDATA[
			    {
			    	data:"wmgc",
			    	type:"checkbox"
			    }
			    ]]></param-value>   
			</param>
		</Component>
		<Component name="HTSGTS" type="QuSelect">
