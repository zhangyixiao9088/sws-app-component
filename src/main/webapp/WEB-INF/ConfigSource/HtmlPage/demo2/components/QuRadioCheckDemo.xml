				<param-value><![CDATA[tmplayout]]></param-value>
			</param>
		</View>
	</Views>
	<Components>
		<Component name="tmplayout" type="HtmlLayout">
			<param>
				<param-name>LayoutManager</param-name>
				<param-value><![CDATA[com.ccs.core.views.htmlView.component.layout.TempletLayout]]></param-value>
			</param>
			<param>
				<param-name>LayoutManager-Properties</param-name>
				<param-value><![CDATA[
				<br>
				<h1>单选</h1><br>
			       ${SINGLERADIO}<br>
			       <b>属性：</b><br>
			    	type="QuRadioCheck"<br>
			    <b>Label属性：</b><br>
			    	""label":"单选"<br>
			    <b>View属性：</b><br>
			    	data:"wmgc",<br>
			    	type:"radio",<br>
			    	<br>
			     <h1>多选</h1><br>
			       ${MULTIPRADIO}<br>
			       <b>属性：</b><br>
			    	type="QuRadioCheck"<br>
			    <b>Label属性：</b><br>
			    	""label":"多选"<br>
			    <b>View属性：</b><br>
			    	data:"wmgc",<br>
